<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"        
    xmlns:guilib="http://schemas.android.com/apk/com.gandulf.guilib"    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/page_margin"    
    android:orientation="horizontal" >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:isScrollContainer="false"
        android:padding="4dp" >

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end"
            guilib:columnCount="2"
            guilib:orientation="vertical"
            guilib:useDefaultMargins="true">
            
            <TextView
                android:id="@+id/popup_edit_name_label"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_column="1"
                guilib:layout_gravity="start|end"
                guilib:layout_row="0"
                android:text="Name" />

            <ImageView
                android:id="@+id/popup_edit_icon"
                style="?attr/android:spinnerStyle"
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                guilib:layout_column="0"
                guilib:layout_gravity="bottom|right"
                guilib:layout_row="0"
                guilib:layout_rowSpan="2" />
            
            <EditText
                android:id="@+id/popup_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                guilib:layout_column="1" 
                guilib:layout_gravity="start|end"
                android:inputType="text"
                guilib:layout_row="1" />

            <TextView
                android:id="@+id/popup_edit_title_label"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_column="0"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="start|end"
                guilib:layout_row="2"
                android:text="Titel" />

            <EditText
                android:id="@+id/popup_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="start|end"
                android:inputType="text"
                guilib:layout_row="3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="fill_horizontal"
                guilib:layout_row="4" >

                <TextView
                    android:id="@+id/popup_edit_price_label"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:text="Preis" />

                <TextView
                    android:id="@+id/popup_edit_weight_label"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:text="Gewicht" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="fill_horizontal"
                guilib:layout_row="5" >

                <EditText
                    android:id="@+id/popup_edit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    guilib:layout_gravity="right|fill_horizontal"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    guilib:layout_gravity="left|center_vertical"
                    android:text="Kreuzer"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/popup_edit_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    guilib:layout_gravity="right|fill_horizontal"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    guilib:layout_gravity="right|center_vertical"
                    android:text="Unzen"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <TextView
                android:id="@+id/popup_edit_category_label"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_column="0"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="start|end"
                guilib:layout_row="8"
                android:text="Kategorie" />

            <Spinner
                android:id="@+id/popup_edit_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="start|end"
                guilib:layout_row="9"
                tools:listitem="@android:layout/simple_spinner_item" />

            <CheckBox
                android:id="@+id/popup_edit_overlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="left"
                guilib:layout_row="10"
                android:text="Name Ã¼ber dem Bild anzeigen" />
            
            
            <android.support.v7.widget.Space
                android:id="@+id/space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_column="0"
                guilib:layout_gravity="fill" />
            
            <include
                android:id="@+id/inc_gal_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                guilib:layout_columnSpan="2"
                guilib:layout_gravity="start|end"                
                layout="@layout/item_listitem_view" />            
            
        </android.support.v7.widget.GridLayout>

    </ScrollView>

    <com.dsatab.view.CardView
        android:id="@+id/popup_edit_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter" >
    </com.dsatab.view.CardView>

</LinearLayout>