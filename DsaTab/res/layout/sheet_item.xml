<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:guilib="http://schemas.android.com/apk/com.gandulf.guilib"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/page_margin"
    android:orientation="horizontal" >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:isScrollContainer="false"
        android:padding="4dp" >

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:columnCount="2"
            auto:orientation="vertical"
            auto:useDefaultMargins="true">
            
            <TextView
                android:id="@+id/popup_edit_name_label"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_column="1"
                auto:layout_gravity="start|end"
                auto:layout_row="0"
                android:text="Name" />

            <ImageView
                android:id="@+id/popup_edit_icon"
                style="?attr/iconImageViewStyle"                
                android:layout_width="@dimen/icon_button_size"
                android:layout_height="@dimen/icon_button_size"
                auto:layout_column="0"
                auto:layout_gravity="bottom|right"
                auto:layout_row="0"
                auto:layout_rowSpan="2" />
            
            <TextView
                android:id="@+id/popup_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                auto:layout_column="1" 
                auto:layout_gravity="start|end"
                auto:layout_row="1" />

            <TextView
                android:id="@+id/popup_edit_title_label"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_column="0"
                auto:layout_columnSpan="2"
                auto:layout_gravity="start|end"
                auto:layout_row="2"
                android:text="Titel" />

            <TextView
                android:id="@+id/popup_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_columnSpan="2"
                auto:layout_gravity="start|end"
                auto:layout_row="3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_columnSpan="2"
                auto:layout_gravity="fill_horizontal"
                auto:layout_row="4" >

                <TextView
                    android:id="@+id/popup_edit_price_label"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:text="Preis" />

                <TextView
                    android:id="@+id/popup_edit_weight_label"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:text="Gewicht" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_columnSpan="2"
                auto:layout_gravity="fill_horizontal"
                auto:layout_row="5" >

                <TextView
                    android:id="@+id/popup_edit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    auto:layout_gravity="right|fill_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    auto:layout_gravity="left|center_vertical"
                    android:text="Kreuzer"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/popup_edit_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    auto:layout_gravity="right|fill_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    auto:layout_gravity="right|center_vertical"
                    android:text="Unzen"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <TextView
                android:id="@+id/popup_edit_category_label"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_column="0"
                auto:layout_columnSpan="2"
                auto:layout_gravity="start|end"
                auto:layout_row="8"
                android:text="Kategorie" />

            <TextView
                android:id="@+id/popup_edit_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_columnSpan="2"
                auto:layout_gravity="start|end"
                auto:layout_row="9"
                 />
            
            <android.support.v7.widget.Space
                android:id="@+id/space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_column="0"
                auto:layout_gravity="fill" />
            
            <include
                android:id="@+id/inc_gal_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:layout_columnSpan="2"
                auto:layout_gravity="start|end"                
                layout="@layout/item_listitem_view" />            
            
        </android.support.v7.widget.GridLayout>

    </ScrollView>

    <com.dsatab.view.CardView
        android:id="@+id/popup_edit_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter" >
    </com.dsatab.view.CardView>

</LinearLayout>